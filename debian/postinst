#! /bin/sh
# postinst script for pf-sys-ssh
#
# see: dh_installdeb(1)

set -e


case "$1" in
    configure)
        chmod 700 /root/.ssh
	    if [ ! -f "/root/.ssh/authorized_keys2" ]; then
	        cat /root/.ssh/authorized_keys_jenkins_test > /root/.ssh/authorized_keys2
	    else
			if ! grep -q 'jenkins-test' "/root/.ssh/authorized_keys2"; then
		        cat /root/.ssh/authorized_keys_jenkins_test >> /root/.ssh/authorized_keys2
			fi
	    fi
        chmod 600 /root/.ssh/authorized_keys2
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
	exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
