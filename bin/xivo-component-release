COMPONENT=$1

if [ -z "$COMPONENT" ]; then
    exit 1
fi

echo "$(apt-cache policy $COMPONENT | grep Installed | cut -d ' ' -f4 | cut -d ':' -f2 | cut -d '~' -f1)"
